[Unit]
Description=HashiCorp Consul Service
Requires=network-online.target
After=network-online.target
ConditionFileNotEmpty=/etc/consul.d/consul_config.hcl

[Service]
ExecStart=/usr/local/bin/consul server -config-dir=/etc/consul.d/
ExecReload=/bin/kill --signal HUP $MAINPID
KillMode=process
KillSignal=SIGTERM
Restart=on-failure
LimitNOFILE=65536

[Install]
WantedBy=multi-user.target